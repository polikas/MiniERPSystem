@model IEnumerable<MiniERPSystem.Models.Order>

<h2>Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Customer</th>
            <th>Number of Products</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@(order.Customer != null ? order.Customer.Name : "No Customer Assigned")</td>
                <td>@(order.Products != null && order.Products.Any() ? order.Products.Count : 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Order</a>
